</div>
<div>
    <h3>Comments</h3>
    @if (Model.Comments != null && Model.Comments.Any())
    {
        <ul>
            @foreach (var comment in Model.Comments)
            {
                <li>
                    <strong>@comment.Author</strong> (@comment.CreatedAt.ToShortDateString()): <br />
                    @comment.Content
                </li>
            }
        </ul>
    }
    else
    {
        <p>No comments available.</p>
    }
</div>
